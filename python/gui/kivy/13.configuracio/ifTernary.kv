<AlapWidget>:
    Label:
        text:"Melyik piat szereted"
        pos_hint: {"center_x":0.2, "y": 0.85}
        size_hint: 0.2, 0.2
        font_size: 25

    CheckBox:
        pos_hint: {"center_x":0.2, "y":0.75}
        size_hint: 0.2, 0.2
        on_press: print(f"A sort szereted.") if self.active else None
    Label:
        text: "Sor"
        pos_hint: {"center_x":0.3, "y":0.75}
        size_hint: 0.2, 0.2
        font_size: 20

    CheckBox:
        pos_hint: {"center_x":0.2, "y":0.5}
        size_hint: 0.2, 0.2
        on_press: print("A bort szereted.") if self.active else ""
    Label:
        text: "Bor"
        pos_hint: {"center_x":0.3, "y":0.5}
        size_hint: 0.2, 0.2
        font_size: 20